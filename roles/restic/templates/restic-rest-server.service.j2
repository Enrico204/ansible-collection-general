[Unit]
Requires=network.target
After=network.target
Description=Start the restic REST server instance

[Service]
Type=simple
ExecSearchPath=/usr/bin/:/usr/local/bin/
ExecStart=rest-server --path "{{ rest_server_path }}" --no-auth --append-only --listen "{{ rest_server_listen }}"

[Install]
WantedBy=multi-user.target
