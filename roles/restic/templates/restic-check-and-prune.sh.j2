#!/usr/bin/env bash
set -eo pipefail

export PATH="$PATH:/usr/bin/:/usr/local/bin/"
export RESTIC_REPOSITORY='{{ restic_agent_repository }}'
export RESTIC_PASSWORD='{{ restic_agent_password }}'

restic check

restic forget \
	--keep-daily    7   \
	--keep-weekly   4   \
	--keep-monthly  6   \
	--keep-tag MANUAL   \
	--group-by host

restic prune
